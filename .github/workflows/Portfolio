name: Deploy Portfolio

on:
  push:
    branches: ["main"]

permissions:
  contents: read
  pages: write
  id-token: write

jobs:
  build:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout du code
        uses: actions/checkout@v4

      - name: Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: '20'

      - name: Execution du Makefile
        run: make

      - name: Upload du site
        uses: actions/upload-pages-artifact@v3
        with:
          path: './dist' 

  deploy:
    needs: build
    runs-on: ubuntu-latest
    environment:
      name: github-pages
      url: ${{ steps.deployment.outputs.page_url }}
    steps:
      - name: Mise en ligne
        id: deployment
        uses: actions/deploy-pages@v4
