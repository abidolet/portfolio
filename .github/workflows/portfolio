name: Deploy Portfolio

on:
  push:
    branches: ["main"]

permissions:
  contents: read
  pages: write
  id-token: write

jobs:
  build:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout du code
        uses: actions/checkout@v4

      - name: Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: '20'
          cache: 'npm' # Accélère les builds suivants

      - name: Installation et Build via Makefile
        run: make

      - name: Upload du résultat
        uses: actions/upload-pages-artifact@v3
        with:
          path: './dist' 

  deploy:
    needs: build
    runs-on: ubuntu-latest
    environment:
      name: github-pages
      url: ${{ steps.deployment.outputs.page_url }}
    steps:
      - name: Déploiement réel
        id: deployment
        uses: actions/deploy-pages@v4
