name: Deploy Portfolio

on:
  push:
    branches: ["main"]

permissions:
  contents: read
  pages: write
  id-token: write

jobs:
  build:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout du code
        uses: actions/checkout@v4

      - name: Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: '20'
          cache: 'npm'

      - name: Installation et Build
        run: |
          npm install
          mkdir -p build
          make
          cp index.html build/ 2>/dev/null || echo "index déjà présent"

      - name: Upload du site
        uses: actions/upload-pages-artifact@v3
        with:
          path: './build' 

  deploy:
    needs: build
    runs-on: ubuntu-latest
    environment:
      name: github-pages
      url: ${{ steps.deployment.outputs.page_url }}
    steps:
      - name: Mise en ligne
        id: deployment
        uses: actions/deploy-pages@v4
